<h1><%= @artist.name %></h1>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>
<h2>Songs</h2>
<% @artist.songs.each do |song| %>
  <h3><a href='/songs/<%= song.slug %>'><%= song.name %></a></h3>
<% end %>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>
<h2>Genres</h2>
<% @artist.genres.each do |genre| %>
  <h3><a href='/genres/<%= genre.slug %>'><%= genre.name %></a></h3>
<% end %>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>

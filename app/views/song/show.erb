<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %> 

<a href='/songs'>Songs Home</a>
<h1><%= @song.name %></h1>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>
<h2>Artist: <a href='/artists/<%= @song.artist.slug %>'><%= @song.artist.name %></a></h2>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>
<h2>Genres</h2>
<% @song.genres.each do |genre| %>
  <h3><a href='/genres/<%= genre.slug %>'><p><%= genre.name %></a></h3>
<% end %>
<hr style='width:15%; text-align:left; margin: 0 auto 0 0;'>
<a href='/songs/<%= @song.slug %>/edit' class="btn btn-primary">Edit</a>
<form method='POST' action='/songs/<%= @song.slug %>/delete'>
  <input type='hidden' id='hidden' name='_method' value='DELETE'>
  <input type='submit' value='Delete' class="btn btn-danger">
</form>
